<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingVertical="@dimen/spacer_h_16"
    android:paddingHorizontal="@dimen/spacer_h_16"
    android:orientation="vertical"
    tools:context=".ui.LoginActivity"
    >


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@android:drawable/btn_dialog" />

    <TextView
        style="@style/Heading1"
        android:textColor="@color/high_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_mobile_number" />

    <TextView
        style="@style/Subtitle2"
        android:layout_marginTop="@dimen/spacer_h_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_use_upi" />

    <LinearLayout
        android:layout_marginTop="@dimen/spacer_h_32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/Heading1"
            android:textColor="@color/secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91"
            />
        <EditText
            android:id="@+id/auth_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:enabled="false"
            android:layout_marginTop="@dimen/spacer_h_32"
            android:minHeight="48dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.slash.KeyboardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/sendOtpBtn"
            style="@style/ButtonPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/btn_continue"
            />
    </LinearLayout>



</LinearLayout>